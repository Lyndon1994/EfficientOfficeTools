{
	"default_locale": "en",
	"background": {
		"service_worker": "js/background.js"
	},
	"description": "__MSG_extDescription__",
	"homepage_url": "https://github.com/Lyndon1994/EfficientOfficeTools",
	"icons": {
		"16": "assets/logo.png",
		"32": "assets/logo.png",
		"48": "assets/logo.png",
		"128": "assets/logo.png"
	},
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
	},
	"manifest_version": 3,
	"name": "__MSG_extName__",
	"permissions": [
		"contextMenus",
		"activeTab",
		"storage"
	],
	"short_name": "__MSG_extName__",
	"version": "1.2.1",
	"commands": {
		"toggle-search": {
			"suggested_key": {
				"default": "Alt+S",
				"mac": "MacCtrl+S"
			},
			"description": "Toggle Search Engine"
		}
	},
	"action": {
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "options.html"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"fonts/*"
			],
			"matches": [],
			"extension_ids": []
		}
	],
	"content_scripts": [
		{
			"all_frames": true,
			"matches": ["<all_urls>"],
		  	"js": ["js/content.js"],
			"css": [ "css/content.css" ],
			"run_at": "document_end"
		}
	]
}